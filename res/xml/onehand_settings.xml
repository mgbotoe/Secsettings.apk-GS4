<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/onehand_settings_title" android:key="onehand_settings"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
  xmlns:touchwiz="http://schemas.android.com/apk/res/touchwiz">
    <PreferenceCategory android:title="@string/onehand_activate_category" android:key="category_onehand_operation" />
    <CheckBoxPreference android:title="@string/onehand_activate_anyscreen_title" android:key="any_screen" android:summary="@string/onehand_activate_anyscreen_summary" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" />
    <CheckBoxPreference android:title="@string/onehand_activate_dialer_title" android:key="dialer" android:summary="@string/onehand_activate_dialer_summary" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" />
    <CheckBoxPreference android:title="@string/onehand_activate_samsung_keypad_title" android:key="samsung_keypad" android:summary="@string/onehand_activate_samsung_keypad_summary" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" />
    <CheckBoxPreference android:title="@string/onehand_activate_calculator_title" android:key="calculator" android:summary="@string/onehand_activate_calculator_summary" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" />
    <CheckBoxPreference android:title="@string/onehand_activate_pattern_title" android:key="pattern" android:summary="@string/onehand_activate_pattern_summary" android:widgetLayout="@touchwiz:layout/preference_widget_twcheckbox" />
    <SwitchPreferenceScreen android:title="@string/onehand_activate_hand_adaptive_title" android:key="hand_adaptive_mode" android:fragment="com.android.settings.OneHandAdaptiveHelp">
        <intent android:targetPackage="com.android.settings" android:action="android.intent.action.MAIN" />
    </SwitchPreferenceScreen>
    <PreferenceCategory android:title="@string/onehand_tutorial_category" android:key="category_tutorial" />
    <PreferenceScreen android:title="@string/onehand_tutorial_help_title" android:key="onehand_help" android:fragment="com.android.settings.OneHandHelp" />
</PreferenceScreen>